                <a href="{{ ( app.locale  ==  'en')?  url_to( 'services' ) :  url_to( 'servicios' )   }}/#insurance">Seguros</a>
              </li>
            </ul>
          </div>
        </div>
      </li>
      <li class="">
        <div class="dropdown">
          <a href="{{  ( app.locale  ==  'en')?  url_to( 'company' ) :  url_to( 'empresa' )   }}" class="btn-dropdown"> Empresa
            <span class="icon icon-angle-down">
          </a>
          <div class="dropdown-list">
            <ul>
              <li>
                <a href="{{  ( app.locale  ==  'en')?  url_to( 'company' ) :  url_to( 'empresa' )   }}#history">Historia</a>
              </li>
              <li>
                <a href="{{ ( app.locale  ==  'en')?  url_to( 'company' ) :  url_to( 'empresa' )   }}#philosophy">Nuestra filosofía</a>
              </li>
              <li>
                <a href="{{  ( app.locale  ==  'en')?  url_to( 'company' ) :  url_to( 'empresa' )   }}#comany-pol">Política de empresa</a>
              </li>
              <li>
                <a href="{{  ( app.locale  ==  'en')?  url_to( 'company' ) :  url_to( 'empresa' )   }}#qa">Calidad</a>
              </li>
